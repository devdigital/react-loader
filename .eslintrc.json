{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },

  "rules": {
    "semi": [2, "never"],
    "no-console": 1,
    "no-var": 1,
    "no-unused-vars": 1,
    "new-cap": 0,
    "react/prefer-stateless-function": 0,
    "max-len": [1, 120, 2, {"ignoreComments": true}]
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "airbnb"
  ]
}
